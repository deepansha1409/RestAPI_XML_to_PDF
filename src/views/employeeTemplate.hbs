<!-- src/views/employeeTemplate.hbs -->

<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Employee Data Form</title>
    <style>
      body { font-family: 'Arial', sans-serif; color: #333; margin: 15px; } h3 {
      color: #333; text-align: center; margin-bottom: 20px; } form {
      background-color: #fff; padding: 20px; border-radius: 10px; box-shadow: 0
      0 10px rgba(0, 0, 0, 0.1); margin: 20 auto; max-width: 700px; } .form-row
      { margin-bottom: 20px; } label { display: block; margin-bottom: 6px;
      font-weight: bold; font-size: 14px; color: #555; } span { display: block;
      font-size: 12px; color: #333; } hr { border: none; border-top: 1px solid
      #ddd; margin: 20px 0; }
    </style>
  </head>
  <body>
    <h3>Employee Data Form</h3>
    {{#each employee}}
      <form>
        <div class='form-row'>
          <label for='id'>ID:</label>
          <span id='id'>{{this.id}}</span>
        </div>

        <div class='form-row'>
          <label for='name'>Name:</label>
          <span id='name'>{{this.name}}</span>
        </div>

        <div class='form-row'>
          <label for='position'>Position:</label>
          <span id='position'>{{this.position}}</span>
        </div>

        <div class='form-row'>
          <label for='department'>Department:</label>
          <span id='department'>{{this.department}}</span>
        </div>

        <div class='form-row'>
          <label for='salary'>Salary:</label>
          <span id='salary'>{{this.salary}}</span>
        </div>

        <div class='form-row'>
          <label for='hire_date'>Hire Date:</label>
          <span id='hire_date'>{{this.hire_date}}</span>
        </div>
        <hr />
      </form>
    {{/each}}
  </body>
</html>